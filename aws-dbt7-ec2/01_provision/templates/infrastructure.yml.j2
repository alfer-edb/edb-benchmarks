---
aws:
  tags:
    cluster_name: DBT7-EC2
    created_by: edb-benchmarks
  images:
    driver:
      name: Rocky-8-ec2-8.6-20220515.0.x86_64
      owner: 679593333241
      ssh_user: rocky
    postgres:
      name: {{ pg_image_name }}
      owner: {{ pg_image_owner }}
      ssh_user: {{ pg_ssh_user }}
  regions:
    {{ region }}:
      cidr_block: 10.0.0.0/16
      zones:
        {{ zone0 }}: 10.0.0.0/24
      service_ports:
        - port: 22
          protocol: tcp
          description: "SSH"

  machines:
    postgres1:
      spot: true
      image_name: postgres
      tags:
        type: primary
      region: {{ region }}
      az: {{ zone0 }}
      instance_type: {{ pg_instance_type }}
      volume:
        type: {{ pg_storage_type }}
        size_gb: {{ pg_storage_size }}
        iops: {{ pg_storage_iops }}
        encrypted: false
      additional_volumes:
        - mount_point: {{ pg_data}}
          type: gp3
          size_gb: 1000
          iops: 16000
          encrypted: false
        - mount_point: {{ pg_wal }}
          type: gp3
          size_gb: 1000
          iops: 16000
          encrypted: false
