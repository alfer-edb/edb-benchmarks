# The following template assumes postgres instances within AWS and
#   have additional attached storage devices based on the pg_instance_type provided
aws:
  tags:
    cluster_name: TPCC-refdata
    created_by: edb-benchmarks
  images:
    driver:
      name: Rocky-8-ec2-8.6-20220515.0.x86_64
      owner: 679593333241
      ssh_user: rocky
    postgres:
      name: {{ pg_image_name }}
      owner: {{ pg_image_owner }}
      ssh_user: {{ pg_ssh_user }}
  regions:
    {{ region }}:
      cidr_block: 10.0.0.0/16
      azs:
        {{ zone0 }}: 10.0.0.0/24
      service_ports:
        - port: 22
          protocol: tcp
          description: "SSH"
        - port: 5444
          protocol: tcp
          description: "EPAS"
        - port: 5432
          protocol: tcp
          description: "EPAS"

  machines:
    hammerdb:
      image_name: driver
      tags:
        type: hammerdb
      region: {{ region }}
      az: {{ zone0 }}
      instance_type: {{ driver_instance_type }}
      volume:
        type: gp3
        size_gb: 1000
        iops: 3000
        encrypted: false
    postgres1:
      image_name: postgres
      tags:
        type: primary
      region: {{ region }}
      az: {{ zone0 }}
      instance_type: {{ pg_instance_type }}
      volume:
        type: gp3
        size_gb: 1000
        iops: 3000
        encrypted: false
